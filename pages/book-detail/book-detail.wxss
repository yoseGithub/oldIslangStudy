page {
    background-color: #f5f5f5;
}

.container {
    display: flex;
    padding-bottom: 100rpx;
    flex-direction: column;
}

.page-wrap {
    margin-top: 20rpx;
    padding: 30rpx 0;
    background-color: #fff;
}

/* 详情头部 - 书本基础信息 */
.head {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.book {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
    display: block;
    margin-top: 30rpx;
    margin-bottom: 18rpx;
    font-size: 38rpx;
    font-weight: 500;
    color: #000;
}

.author {
    font-size: 28rpx;
    color: #999;
}

.g-hd {
    display: block;
    font-size: 30rpx;
    font-weight: 500;
    color: #000;
    text-align: center;
}

.short-comment .g-hd {
    margin-bottom: 10rpx;
}
.book-content .g-hd {
    margin-bottom: 21rpx;
}

.book-info .g-hd {
    margin-bottom: 30rpx;
}

.comments,
.comment-container {
    display: flex;
    flex-wrap: wrap;
    padding: 0 28rpx;
}

.comments .tag-item-cpt,
.comment-container .tag-item-cpt {
    margin-top: 20rpx;
    margin-right: 12rpx;
}

.fav-num {
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #999;
}

.comments > .tag-item-cpt:first-child .ex-tag {
    background-color: #fffbdd;
}

.comments > .tag-item-cpt:nth-child(2)  .ex-tag {
    background-color: #eefaff;
}

.summary {
    display: block;
    padding: 0 60rpx;
    font-size: 28rpx;
    color: #666;
    line-height: 46rpx;
    word-break: break-all;
    word-wrap: break-word;
}

.info-list {
    padding: 0 60rpx;
    font-size: 24rpx;
    color: #666;
}

.info-item:nth-child(n+2) {
    margin-top: 20rpx;
}

.label {
    margin-right: 20rpx;
    color: #999;
}

.post-container {
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    width: 690rpx;
    padding: 0 30rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    background-color: #fff;
}

.post-fake {
    display: flex;
    align-items: center;
    width: 460rpx;
    height: 60rpx;
    padding-left: 20rpx;
    border: 1px solid #999;
    border-radius: 30rpx;
    font-size: 22rpx;
    color: #666;
    box-sizing: border-box;
}

/* 短评弹层 */
.posting-container {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    z-index: 6;
    align-items: center;
    background-color: #fff;
}
.post-header {
    display: flex;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    align-items: center;
    justify-content: space-between;
}
.cancel {
    color: #666;
}
.post-header text {
    padding: 25rpx;
    font-size: 24rpx;
}

.post-header>text:first-child {
    color: #bbb;
}
.posting-container .comment-container {
    width: 690rpx;
    padding: 40rpx 30rpx 0 30rpx;
}
.comment-container > .tag-item-cpt:first-child .ex-tag {
    background-color: #fffbdd;
}

.comment-container > .tag-item-cpt:nth-child(2)  .ex-tag {
    background-color: #eefaff;
}
.post {
    width: 690rpx;
    margin: 30rpx auto;
    height: 56rpx;
    padding-left: 25rpx;
    font-size: 24rpx;
    border-radius: 28rpx;
    background-color: #f5f5f5;
}

.shadow {
    display: block;
    margin-top: 20rpx;
    color: #999;
    font-size: 28rpx;
    text-align: center;
}