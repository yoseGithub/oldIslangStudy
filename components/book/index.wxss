.container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 240rpx;
    height: 360rpx;
    margin: 0 auto;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.cover {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}

.description {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 138rpx;
    padding: 12rpx 20rpx 20rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.title {
    display: block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #1f1f1f;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.author {
    display: block;
    font-size: 20rpx;
    color: #999;
    line-height: 30rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.foot {
    display: flex;
    flex: 1;
    align-items: flex-end;
    justify-content: flex-end;
    font-size: 20rpx;
    color: #999;
}